---
import CommonLayout from "@/layouts/CommonLayout.astro"
import Link from "@/components/base/Link.astro"
import { ToolSection, ToolTag } from "@/components/tools"

const usesDescription =
  "A collection of tools that I use on a frequent basis. \
  Except for the hardware, I use free versions of most tools. \
  I'm also a big fan of open-source software (OSS)."
---

<CommonLayout
  title="Uses"
  description={usesDescription}
  updatedAt={new Date()}
  breadcrumbs={[{ label: "Uses", icon: "tool" }]}
>
  <ToolSection
    title="Workstation (+Operating System)"
    tools={[
      {
        name: "MacBook M1 Pro 14'",
        description: "MacOS Tahoe 26",
        href: "https://www.apple.com/mac/",
        icon: "mingcute:apple-line"
      },
      {
        name: "Linux (Virtual Machine)",
        description: "Ubuntu 24.04 LTS",
        href: "https://ubuntu.com/",
        icon: "ubuntu",
        tags: [ToolTag.OpenSource]
      },
      {
        name: "Logitech Lift for Mac",
        description: "Vertical Ergonomic Mouse",
        href: "https://www.logitech.com/en-us/shop/p/lift-vertical-ergonomic-mouse-mac.910-006471",
        icon: "logitech"
      },
      {
        name: "Logitech Wave Keys for Mac",
        description: "Wireless Ergonomic Keyboard",
        href: "https://www.logitech.com/en-us/shop/p/wave-keys-mac.920-012402",
        icon: "logitech"
      }
    ]}
  />
  <ToolSection
    title="Development"
    tools={[
      {
        name: "Zed",
        description: "IDE (Vim mode)",
        href: "https://zed.dev/",
        icon: "zed",
        tags: [ToolTag.Free, ToolTag.OpenSource, ToolTag.Favorite]
