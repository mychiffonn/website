---
import PostManager from "@/lib/blog"
import Layout from "@/layouts/Layout.astro"
import Breadcrumbs from "@/components/layout/Breadcrumbs.astro"
import AuthorCard from "@/components/people/AuthorCard.astro"

const authors = await PostManager.getInstance().getAllAuthors()
---

<Layout title="People">
  <Breadcrumbs items={[{ label: "People", icon: "group" }]} />
  {
    authors.length > 0 ? (
      <ul class="flex flex-col gap-4">
        {authors.map((author) => (
          <li>
            <AuthorCard author={author} />
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-muted-foreground text-center">No authors found.</p>
    )
  }
</Layout>
