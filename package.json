{
  "name": "astro-academic",
  "type": "module",
  "version": "0.8.5",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "check": "astro check",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format": "prettier --write **/*.{astro,ts,tsx,css,mjs,md,mdx} --ignore-path .gitignore",
    "postinstall": "patch-package",
    "lint": "pnpm dlx oxlint --type-aware",
    "routine": "pnpm lint && pnpm sync && pnpm format",
    "clean": "rm -rf dist/ .astro/",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/markdown-remark": "^6.3.8",
    "@astrojs/mdx": "^4.3.8",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "^3.6.0",
    "@citation-js/core": "^0.7.21",
    "@citation-js/plugin-bibtex": "^0.7.21",
    "@expressive-code/plugin-collapsible-sections": "^0.40.2",
    "@expressive-code/plugin-line-numbers": "^0.40.2",
    "@iconify-json/academicons": "^1.2.4",
    "@iconify-json/mingcute": "^1.2.5",
    "@r4ai/remark-callout": "^0.6.2",
    "@tailwindcss/vite": "^4.1.16",
    "@types/mdast": "^4.0.4",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "astro": "^5.15.1",
    "astro-expressive-code": "^0.40.2",
    "astro-icon": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "patch-package": "^8.0.1",
    "radix-ui": "^1.4.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-katex": "^7.0.1",
    "rehype-pretty-code": "^0.14.1",
    "remark-emoji": "^5.0.2",
    "remark-math": "^6.0.0",
    "remark-sectionize": "^2.1.0",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "oxlint": "^1.24.0",
    "oxlint-tsgolint": "^0.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "lint-staged": {
    "*.{astro,ts,tsx,js,jsx,mjs}": [
      "prettier --write",
      "pnpm dlx oxlint --type-aware"
    ],
    "*.{md,mdx}": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.18.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "sharp"
    ]
  }
}
